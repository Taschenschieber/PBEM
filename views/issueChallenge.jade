extend layout

block secondary-nav
  include secondary-nav-games

block content
  h1 Issue a challenge
  p This page allows you to issue a challenge to another user. The user can review the challenge and accept or decline it.
  p Challenges can be taken back until they are accepted.
  form(method="post", action="/do/games/challenge/issue")
      .form-group
        label Opponent
        input.form-control#opponent(type="text", name="opponent")
      .form-group
        label Time control
        select.form-control#timecontrol(name="timecontrol")
          option(value="none") None
          option(value="48h") 48 hours per move
          option(value="4d") 4 days per move
          option(value="1m") 1 month per match
          option(value="3m") 3 months per match
          option(value="sand48h") 48 hours - hourglass
      .form-group
        label Scenario
        input.form-control#scenario(type="text", name="scenario", onchange="javascript:window.scenario();")
      .checkbox
        label
          input.form-control#dyo(type="checkbox", name="dyo", onchange="javascript:window.dyo();")
          | DYO / Custom scenario
      .form-group
        label Message
        textarea.form-control#message(name="message")
      button.btn.btn-primary(type="submit") Send